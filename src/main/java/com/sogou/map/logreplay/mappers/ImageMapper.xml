<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.sogou.map.logreplay.mappers.ImageMapper">
		  	
  	<insert id="batchSave" useGeneratedKeys="true">
  		insert into image (<include refid="columns" />)
  		values
  		<foreach collection="list" item="image" separator=",">
  			(<include refid="fields" />)
  		</foreach>
  	</insert>
  	
  	<select id="count" resultType="_int">
  		select count(*) from image
  		<include refid="where" />
  	</select>
  	
  	<select id="list" resultType="Image">
  		select * from image
  		<include refid="where" />
		<include refid="CommonMapper.limit" />
  	</select>
  	
  	<sql id="columns">
  		id, checksum, format, type, width, height, size, creator_id, create_time
  	</sql>
  	
  	<sql id="fields">
  		#{image.id}, #{image.checksum}, #{image.format}, #{image.type},
 		#{image.width}, #{image.height}, #{image.size}, 
 		#{image.creatorId}, #{image.createTime}
  	</sql>
  	
  	<sql id="where">
  		<where>
  			<if test="id != null">
  				and id = #{id}
  			</if>
  			<if test="checksum != null">
  				and checksum = #{checksum}
  			</if>
  			<if test="checksum__in != null" >
  				and checksum in 
  				<foreach collection="checksum__in" item="item" separator="," open="(" close=")">
  					#{item}
  				</foreach>
  			</if>
  		</where>
  	</sql>
  	
</mapper>