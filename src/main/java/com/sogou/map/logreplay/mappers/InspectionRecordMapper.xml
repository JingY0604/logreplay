<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.sogou.map.logreplay.mappers.InspectionRecordMapper">
  	
  	<select id="count" resultType="_int">
  		select count(*) from inspection_record
  		<include refid="where" />
  	</select>
  	
  	<select id="list" resultType="InspectionRecord">
  		select * from inspection_record
  		<include refid="where" />
  		<include refid="CommonMapper.orderBy" />
		<include refid="CommonMapper.limit" />
  	</select>
  	
  	<sql id="where">
  		<where>
  			<if test="id != null">
  				and id = #{id}
  			</if>
  			<if test="productId != null">
  				and product_id = #{productId}
  			</if>
  			<if test="valid != null">
  				and valid = #{valid}
  			</if>
  			<if test="solved != null">
  				and solved = #{solved}
  			</if>
  			<if test="createTime_ge != null">
  				and create_time >= #{createTime_ge}
  			</if>
  			<if test="createTime_le != null">
  				<![CDATA[and create_time <= #{createTime_le}]]>
  			</if>
  			<if test="submitterId__in != null">
  				and submitter_id in 
  				<foreach collection="submitterId__in"
  					item="submitterId" separator=","
  					open="(" close=")">
  					#{submitterId}	
  				</foreach>
  			</if>
  			<if test="submitterRoleId != null">
  				and submitter_role_id = #{submitterRoleId}
  			</if>
  			<if test="solverId__in != null">
  				and solver_id in
  				<foreach collection="solverId__in"
  					item="solverId" separator=","
  					open="(" close=")">
  					#{solverId}
  				</foreach>
  			</if>
  			<if test="solverRoleId != null">
  				and solver_role_id = #{solverRoleId}
  			</if>
  			<if test="pageNo != null or tagNo != null">
  				and exists (select 1 from tag_info where tag_info.id = tag_info_id
  				<if test="pageNo != null">
  					and tag_info.page_no = #{pageNo}
  				</if>
  				<if test="tagNo != null">
  					and tag_info.tag_no = #{tagNo}
  				</if>
  				)
  			</if>
  		</where>
  	</sql>
  	
</mapper>